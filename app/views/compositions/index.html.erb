<div class="container compositions-container">
  <h2>
    Some Compositions For Your Reading!
  </h2>
  <div class="row">
    <div class="col-sm-3">
      Filters
    </div>
    <div class="col-sm-9">
      <% @compositions.each do |composition| %>
        <div class="composition">
          <h4>
            <%= link_to composition.title, project_composition_path(composition.project, composition) %>
          </h4>
          <div class="author">
            By <%= link_to composition.user.username, author_path(composition.user) %>
          </div>
          <div class="description">
            <%= composition.description %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

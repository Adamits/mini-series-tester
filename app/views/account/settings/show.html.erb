<h2>
  Howdy <%= current_user.username %>!
</h2>
<% if !current_user.reader? || !current_user.writer? %>
  <h4>
    What would you like to do with your account?
  </h4>
  <div class="row">
    <% if !current_user.reader? %>
      <div class="col-xs-6 col-sm-4">
        <%= link_to "I'm here to read!", make_reader_account_settings_path, class: "btn btn-success btn-block", method: :post %>
      </div>
    <% end %>
    <% if !current_user.writer? %>
      <div class="col-xs-6 col-sm-4">
        <%= link_to "I'm here to write!", make_writer_account_settings_path, class: "btn btn-success btn-block", method: :post %>
      </div>
    <% end %>
  </div>
<% end %>
<div class="form-group">
  <%= link_to "edit my settings", edit_user_registration_path %>
</div>
<div>
  <% if current_user.avatar %>
    <%= image_tag current_user.avatar.url, class: "user-icon" %>
  <% end %>
</div>
<div class="row form-group">
  <div class="col-sm-3">
    <b>Email</b>
  </div>
  <div class="col-sm-9">
    <%= current_user.email %>
  </div>
</div>
<div class="row form-group">
  <div class="col-sm-3">
    <b>Bio</b>
  </div>
  <div class="col-sm-9">
    <%= current_user.bio %>
  </div>
</div>
